@model FamilyBudget.Models.Project

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Delete</h5>
        <button class="btn btn-close" data-dismiss="modal" aria-label="Close">
            <img src="~/lib/bootstrap/dist/icons/x-lg.svg">
        </button>
    </div>

    <div class="modal-body">
        <p class="modal-title" id="deleteModalLabel">Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</p>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

        <form asp-area="" asp-controller="Projects" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger btn-ok" />
        </form>
    </div>
</div>
