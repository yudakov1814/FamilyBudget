@model FamilyBudget.ModalViewModels.FinOperationModal

@{
    ViewData["Title"] = "FinOperationDelete";
}

<div class="modal-content">
    <div class="modal-header">
        @if (@Model.IsNotFound)
        {
            <h3 class="modal-title text-danger">This finoperation is not found.</h3>
        }
        else if (@Model.IsForbid)
        {
            <h3 class="modal-title text-danger">This finoperation is forbidden.</h3>
        }
        else
        {
            <h3 class="modal-title">Are you sure you want to delete this finoperation?</h3>
        }

        <button class="bi bi-x-lg btn" data-dismiss="modal" aria-label="Close"></button>
    </div>
    @if (Model.IsValid)
    {
        <div class="modal-body container-fluid">
        <dl class="row">
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.FinType)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.FinType)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.ForAll)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.ForAll)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Value)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Value)
            </dd>
            @if (Model.FinType == FinType.Charge)
            {
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd class>
            }
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.ProjectMember)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.ProjectMember.NameInProject)
            </dd class>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Project)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Project.Name)
            </dd class>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.CreateTime)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.CreateTime)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.UpdateTime)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.UpdateTime)
            </dd>
        </dl>
        </div>
     }
     <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
         @if (Model.IsValid)
         {
             <form asp-area="" asp-controller="FinOperations" asp-action="Delete">
                 <input type="hidden" asp-for="Id" />
                 <input type="submit" value="Delete" class="btn btn-danger btn-ok" />
             </form>
         }
     </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}